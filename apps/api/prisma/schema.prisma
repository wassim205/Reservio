generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  fullname  String
  email     String   @unique
  password  String
  role      Role     @default(PARTICIPANT)  

  reservations Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  PARTICIPANT
}